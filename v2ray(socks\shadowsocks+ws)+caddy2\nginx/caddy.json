{
  "admin": {
    "disabled": true
  },
  "logging": {
    "logs": {
      "default": {
        "level": "ERROR",
        "writer": {
          "output": "file",
          "filename": "/var/log/caddy/access.log"
        }
      }
    }
  },
  "apps": {
    "http": {
      "servers": {
        "https": {
          "listen": [":443"],
          "routes": [{
            "match": [{
              "path": ["/8ALdGZ9k"], //与本机v2ray path对应,分流出ws。
              "header": {
                "Connection": ["*Upgrade*"],
                "Upgrade": ["websocket"]
              }
            }],
            "handle": [{
              "handler": "reverse_proxy",
              "transport": {
                "protocol": "http"
              },
              "upstreams": [{
                "dial": "127.0.0.1:2008" //转发给本机v2ray对应端口
              }]
            }],
            "terminal": true
          },
          {
            "handle": [{
              "handler": "headers",
              "response": {
                "set": {
                  "Strict-Transport-Security": ["max-age=31536000; includeSubDomains; preload"] //启用HSTS
                }
              }
            },
            {
              "handler": "file_server",
              "root": "/var/www/html" //修改为自己存放的web文件路径
            }],
            "terminal": true
          }],
          "tls_connection_policies": [{
            "match": {
              "sni": ["xx.yy"] //修改成自己的域名
            },
            "cipher_suites": ["TLS_ECDHE_ECDSA_WITH_AES_256_GCM_SHA384","TLS_ECDHE_ECDSA_WITH_AES_128_GCM_SHA256","TLS_ECDHE_ECDSA_WITH_CHACHA20_POLY1305_SHA256"],
            "alpn": ["h2","http/1.1"]
          }]
        }
      }
    },
    "tls": {
      "certificates": {
        "automate": ["xx.yy"] //修改成自己的域名
      }
    }
  }
}
