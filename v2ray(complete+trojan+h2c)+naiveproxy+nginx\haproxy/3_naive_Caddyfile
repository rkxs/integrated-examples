{
    order reverse_proxy before header
    order forward_proxy before reverse_proxy
    admin off
    servers unix//dev/shm/h1h2c.sock { //与下边进程监听对应	
        listener_wrappers {	
            proxy_protocol //开启PROXY protocol接收	
        }
        protocol {
            allow_h2c //开启h2c server支持
        }
    }
    servers unix//dev/shm/naive.sock { //与下边进程监听对应
        listener_wrappers {
            proxy_protocol //开启PROXY protocol接收
            tls
        }
    }
}

:80 { //http默认监听端口
    redir https://{host}{uri} permanent //http自动跳转https,让网站看起来更真实。
}

:88 { //启用进程绑定后此端口失效，仅做标记作用。
    bind unix//dev/shm/h1h2c.sock //启用进程绑定后执行进程监听，仅接收web回落。
    log {
        output file /var/log/caddy/access.log
        level  ERROR
    }
    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" //启用HSTS
    }
    file_server {
        root /var/www/html //修改成自己存放的web文件路径
    }
}

:7443 { //启用进程绑定后此端口失效，仅做标记作用。
    bind unix//dev/shm/naive.sock //启用进程绑定后执行https server进程监听,提供naiveproxy、h2c proxy等应用。
    tls /etc/ssl/tls/xx.yy.crt /etc/ssl/tls/xx.yy.key { //换成你的证书与私钥，绝对路径。
        ciphers TLS_ECDHE_ECDSA_WITH_AES_256_GCM_SHA384 TLS_ECDHE_ECDSA_WITH_AES_128_GCM_SHA256 TLS_ECDHE_ECDSA_WITH_CHACHA20_POLY1305_SHA256
        alpn h2 http/1.1
    }
    log {
        output file /var/log/caddy/access.log
        level  ERROR
    }

    forward_proxy {
        basic_auth user pass //naiveproxy账号与密码，修改为自己的。
        hide_ip
        hide_via
        probe_resistance unsplash.com:443
    }

    reverse_proxy /SeuW56Es 127.0.0.1:2005 { //分流出h2,与v2ray h2 path对应；转发给v2ray h2 端口对应。
        transport http {
            versions h2c
        }
    }

    header {
        Strict-Transport-Security "max-age=31536000; includeSubDomains; preload" //启用HSTS
    }
    file_server {
        root /var/www/html //修改成自己存放的web文件路径
    }
}
